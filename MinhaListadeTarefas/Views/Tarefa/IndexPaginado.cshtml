@model PaginatedList<Tarefa>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h2>Lista de Tarefas com Paginação</h2>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Descrição</th>           
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Descricao</td>
                </tr>
            }
        </tbody>
    </table>

@if (Model.HasPreviousPage)
{
    <a asp-action="IndexPaginado" asp-route-pageNumber="@(Model.PageIndex -1)" class="btn btn-primary">Anterior</a>
}
Página @(Model.PageIndex) de @Model.TotalPages
@if (Model.HasNextPage)
{
    <a asp-action="IndexPaginado" asp-route-pageNumber="@(Model.PageIndex + 1)" class="btn btn-primary">Próxima</a>
}
</div>