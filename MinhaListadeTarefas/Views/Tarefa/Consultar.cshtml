@{
}
<h2>Consulta de Tarefas</h2>
<div class="form-group row">
    <div class="col-3">
        <input id="txtTermo"type="text" class="form-control" placeholder="Digite parte da descrição" />
    </div>
    <div style="margin-top:10px">
        <button  onclick="Pesquisar()" type="button" class="btn btn-primary"><i class="fa fa-search"></i>Pesquisar</button>
    </div>
</div>
<div id="lista">

</div>

@section Scripts{
    <script>
       const Pesquisar = () =>{
           var termo = $("#txtTermo").val();            
           var url = `/Tarefa/Pesquisar?termo=${termo}`;
            $.get(url, function(data){
             $("#lista").html(data);
            });

       }
      
    </script>
}